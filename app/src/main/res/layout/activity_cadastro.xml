<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/cor_fundo_login"
    tools:context="whatsapp.google.com.whatsapp.activity.CadastroActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_user_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_photo"
        app:civ_border_color="@color/divisor" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/widget_nome_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nome_user_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColor="@color/textColorPrimary"
            android:background="@color/cor_fundo_editText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/widget_telefone_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/telefone_user_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            android:textColor="@color/textColorPrimary"
            android:background="@color/cor_fundo_editText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/widget_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email_user_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColorPrimary"
            android:background="@color/cor_fundo_editText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/widget_senha_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp">

        <EditText
            android:id="@+id/senha_user_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:background="@color/cor_fundo_editText"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/botao_cadastrar_usuario_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_cadastrar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"/>

</LinearLayout>
