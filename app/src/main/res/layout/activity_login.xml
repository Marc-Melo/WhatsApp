<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/cor_fundo_login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/largura_icone"
        android:layout_height="@dimen/altura_icone"
        app:srcCompat="@drawable/icone_app"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

        <EditText
            android:id="@+id/txt_email_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:textColor="@color/textColorPrimary"
            android:background="#99f46e45" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_password_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp">

        <EditText
            android:id="@+id/txt_password_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/textColorPrimary"
            android:background="#99f46e45"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_logar_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_logar"/>

    <TextView
        android:id="@+id/txt_cadastre_aqui_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_logar_id"
        android:paddingTop="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/cadastre_aqui" />

</LinearLayout>
