<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/cor_fundo_login"
    tools:context="whatsapp.google.com.whatsapp.activity.NewUserStep2Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_round"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_account_circle"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/divisor" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/widget_cadastro_nome_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/step2_txt_nome_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColor="@color/textColorPrimary"
            android:background="@color/cor_fundo_editText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/widget_cadastro_telefone_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp">

        <EditText
            android:id="@+id/step2_txt_telefone_id"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            android:textColor="@color/textColorPrimary"
            android:background="@color/cor_fundo_editText"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/step2_btn_cadastrar_usuario_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_cadastrar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"/>



    <!--
    <Button
        android:id="@+id/step2_btn_load_imagem_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="Escolher Imagem" />
     -->
</LinearLayout>
