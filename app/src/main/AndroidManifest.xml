<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="whatsapp.google.com.whatsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_whatsapp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.CadastroActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.ConversaActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewUserStep1Activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewUserStep2Activity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>